<h2>Check out all the notes on Noteful so far!</h2>

<div>
  <% @notes.each do |note| %>
    <p><%= note.title %></p>
    <p><%= note.preview %></p>
    <p><%= link_to 'Show', note_path(note) %> |
    <%= link_to 'Edit', edit_note_path(note) %> |
    <%= link_to 'Destroy', note_path(note),
                        method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</div>
